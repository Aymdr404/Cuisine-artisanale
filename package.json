{
  "name": "cuisine-artisanale",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "postbuild": "npx react-snap && node copy404.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "sitemap": "node generateSitemap.js",
    "generate": "plop"
  },
  "dependencies": {
    "@dr.pogodin/react-helmet": "^3.0.4",
    "@emailjs/browser": "^4.4.1",
    "@firebase/firestore": "^4.7.7",
    "@google-cloud/storage": "^7.15.1",
    "dotenv": "^16.4.7",
    "emailjs-com": "^3.2.0",
    "firebase": "^11.3.0",
    "framer-motion": "^12.23.24",
    "gh-pages": "^6.3.0",
    "leaflet": "^1.9.4",
    "primeicons": "^7.0.0",
    "primereact": "^10.9.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-leaflet": "^5.0.0",
    "react-player": "^2.16.0",
    "react-router-dom": "^7.1.5",
    "react-toastify": "^11.0.3",
    "sitemap": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/leaflet": "^1.9.16",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "plop": "^4.0.1",
    "react-snap": "^1.23.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0"
  },
  "reactSnap": {
    "inlineCss": true,
    "skipThirdPartyRequests": true,
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ],
    "source": "dist",
    "include": [
      "/",
      "/recettes",
      "/about",
      "/map",
      "/account",
      "/account/mes-recettes",
      "/account/mes-favoris"
    ]
  }
}
